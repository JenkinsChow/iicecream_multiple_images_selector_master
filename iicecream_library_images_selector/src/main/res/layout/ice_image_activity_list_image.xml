<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        >


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_horizontal_margin_8"
            android:paddingBottom="@dimen/activity_horizontal_margin_8"
            android:paddingRight="@dimen/activity_horizontal_margin_16"
            android:paddingLeft="@dimen/activity_horizontal_margin_16"
            android:src="@mipmap/ice_image_i_return"
            />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingTop="@dimen/activity_horizontal_margin_8"
            android:paddingBottom="@dimen/activity_horizontal_margin_8"
            android:paddingRight="@dimen/activity_horizontal_margin_16"
            android:paddingLeft="@dimen/activity_horizontal_margin_16"

            android:text="完成"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="@dimen/activity_horizontal_margin_8"
        android:listSelector="@android:color/white"
        android:numColumns="4"
        android:padding="@dimen/activity_horizontal_margin_8"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/activity_horizontal_margin_8"/>
</LinearLayout>
